@model M1CP.Feature.Forms.Models.M1CP.IListFormField
@if (Model.Items != null)
{
    @*<div @Model.Validations.ToUIAttributes()>*@
    <label for="" class="col-lg-2 col-md-2 col-sm-4 col-xs-12">
        @Html.Raw(Model.Is_Required ? "<span class='req-field'>* </span>" : string.Empty)
        @Html.Raw(Model.Title)
    </label>
            <div class="col-lg-4 col-md-4 col-sm-7 col-xs-12">
                @*<select @Model.UIElements.ToUIAttributes()>*@
                <select name="@Model.SitecoreItemId.ToString()">
                    <option disabled selected>@Model.PlaceholderText</option>
                    @foreach (var item in Model.Items)
                    {
                        if (Request.Form[Model.SitecoreItemId.ToString()] == item.Title)
                        {
                            <option selected="selected">@Html.Raw(item.Title)</option>
                        }
                        else
                        {
                            <option>@Html.Raw(item.Title)</option>
                        }
                    }
                </select>
                @*@if (Model.Validations != null)
                    {
                        foreach (var validation in Model.Validations)
                        {
                            <span class="error-message @validation.Class">@validation.Validation_Message</span>
                        }
                    }*@
            </div>
            @*</div>*@
}

