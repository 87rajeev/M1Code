@model M1CP.Feature.Forms.Models.M1CP.IListFormField
@if (Model.Items != null)
{
    <label>
        @Html.Raw(Model.Is_Required ? "<span class='req-field'>* </span>" : string.Empty)
        @Html.Raw(Model.Title)
    </label>
    if (Model.Validations != null)
    {
        foreach (var validation in Model.Validations)
        {
            <span class="error-message @validation.Class">@validation.Validation_Message</span>
        }
    }
    foreach (var item in Model.Items)
    {
        @*<div class="radio" @Model.Validations.ToUIAttributes()>*@
            <div class="radio" name="@Model.SitecoreItemId.ToString()">
                <label>
                    @*@if (Request.Form[Model.UIElements.Name] != null && Request.Form[Model.UIElements.Name] == item.Title)
                    {
                        <input type="radio" @Model.UIElements.ToUIAttributes() value="@item.Title" checked="checked">
                    }*@

                    @*else
                    {*@
                        <input type="radio"  value="@item.Title">
                    @*}*@
                    @item.Title
                </label>
            </div>
    }
}

